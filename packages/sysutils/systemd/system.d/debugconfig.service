[Unit]
Description=Setup debug config
DefaultDependencies=no
After=systemd-tmpfiles-setup.service
ConditionKernelCommandLine=|debugging
ConditionPathExists=|/storage/.cache/debug.dekockblock

[Service]
Type=oneshot
ExecStart=/bin/sh -c 'cp /usr/share/debugconf/*.conf /run/dekockblock/debug'
RemainAfterExit=yes

[Install]
WantedBy=sysinit.target
